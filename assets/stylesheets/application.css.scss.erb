@import './mixins.css.scss';

$black: #00091a;
$white: #fefefe;
$blue: #00a6ff;

html, body {
  height: 100%;
}

body {
  margin-top: 40px;
}

.navbar {
  .navbar-inner {
    background: $black;
    color: $white;
    h1 {
      margin: 0px;
      display: block;
      line-height: 40px;
      text-align: center;
      text-transform: capitalize;
      font-size: 24px;
      font-weight: 600;
    }

    .cupcake {
      margin-top: 3px;
      margin-left: 3px;
      width: 30px;
      height: 34px;
      background-image: url(<%= asset_path('cupcake.png') %>);
      background-size: 30px 34px;
    }

    .settings {
      margin-top: 3px;
      margin-right: 3px;
      width: 34px;
      height: 34px;
      background-image: url(<%= asset_path('gears.png') %>);
      background-size: 34px 34px;
    }
  }
}

#main-nav {
  background: $black;
  color: $white;
  text-align: center;

  ul {
    li {
      padding-top: 4px;

      a {
        color: $white;

        &:hover {
          text-decoration: none;
        }
      }

      &.active {
        background-color: $blue;
      }

      .icon {
        margin-left: 14px;
        margin-right: 0px;
      }

      &.timeline {
        .icon {
          background-image: url(<%= asset_path('timeline.png') %>);
          background-size: 32px 31px;
          width: 32px;
          height: 31px;
        }
      }

      &.mentions {
        .icon {
          background-image: url(<%= asset_path('mentions.png') %>);
          background-size: 32px 29px;
          width: 32px;
          height: 29px;
        }
      }

      &.profile {
        .icon {
          background-image: url(<%= asset_path('profile.png') %>);
          background-size: 32px 28px;
          width: 32px;
          height: 28px;
        }
      }

      &.site_feed {
        .icon {
          background-image: url(<%= asset_path('site_feed.png') %>);
          background-size: 32px 32px;
          width: 32px;
          height: 32px;
        }
      }

      &.search {
        .icon {
          background-image: url(<%= asset_path('search.png') %>);
          background-size: 32px 32px;
          width: 32px;
          height: 32px;
        }
      }
    }
  }
}

#loading-indicator {
  @include rounded(4px);
  @include transparent(0);
  @include transition(opacity, ease-in-out, 1s, 0s);

  position: fixed;
  bottom: 24px;
  left: 8px;

  width: 8px;
  height: 8px;
  background-color: #0099FF;

  &.pulse {
    @include transparent(100);
  }
}

textarea {
  resize: none;
  &::-webkit-input-placeholder {
    padding-top: 20px;
    text-align: center;
  }
}

.has-overflow {
  word-break: break-word;
  word-wrap: break-word;
}

img.avatar {
  width: 42px;
  height: 42px;
  margin-right: 4px;
}

img.avatar-large {
  max-width: 100px;
  max-height: 150px;
  min-width: 100px;
  min-height: 100px;
}

#iframe-cache {
  display: none;
}

.label-info {
  background-color: #0099ff;
}

